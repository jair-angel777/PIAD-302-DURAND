    public void shadowDataTable(){
        String[] columns = {"RegistroID","RegionDescription"};
        DefaultTableModel model = new DefaultTableModel(null, columns);
        
        try {
        ResultSet result = obtenerRegistros ("Region");
        while(result.next()){
            String[] row ={
            String.valueOf(result.getInt("RegionID")),
            result.getString("RegionDescription")
        };
        model.addRow(row);
        }
        TABLA_empleados.setModel(model);
        }
        catch (SQLException ex) {
           System.out.println(ex);
         }
    }
