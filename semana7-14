    public Connection conectar(){
        Connection cn = null;
         try {
         String jdbc_url = "jdbc:sqlserver://localhost:1433;encrypt=false;databaseName=Northwind";         
         cn = DriverManager.getConnection(jdbc_url,"sa","1234");
         
         if(cn != null) {
             System.out.println("conexion Exitosa");
         }
                 
        } catch (SQLException ex) {    
        }
        return cn;
    }
    public ResultSet obtener_Registros (){
        String consulta_base_de_datos = "select * from Products";
        ResultSet resultados= null;
        try {
            Statement sentencia = conectar().createStatement();
            resultados = sentencia.executeQuery(consulta_base_de_datos);
        } catch (SQLException e){
            System.out.println(e);
        }
        return resultados;
    }
    public void Cargar_Registro(){
        ResultSet resultados = obtener_Registros();
        String[] columnNames = {"ProductID","ProductName","SupplierID","CategoryID","QuantityPerUnit","UnitPrice","UnitsInStock","UnitsOnOrder","ReorderLevel","Discontinued"};
        //model
        DefaultTableModel model = new DefaultTableModel(null, columnNames);
        TABLA_PRODUCTOS.setModel(model);
        try {
            while (resultados.next()) {
                String[] registro = {
                    String.valueOf(resultados.getInt("ProductID")),
                    resultados.getString("ProductName"),
                    String.valueOf(resultados.getInt("SupplierID")),
                    String.valueOf(resultados.getInt("CategoryID")),
                    resultados.getString("QuantityPerUnit"),
                    String.valueOf(resultados.getFloat("UnitPrice")),
                    String.valueOf(resultados.getInt("UnitsInStock")),
                    String.valueOf(resultados.getInt("UnitsOnOrder")),
                    String.valueOf(resultados.getInt("ReorderLevel")),
                    String.valueOf(resultados.getInt("Discontinued"))
                };
                model.addRow(registro);
            }
        } catch (SQLException e) {
            System.out.println("a");
        }
        TABLA_PRODUCTOS.setModel(model);
    }
    
    void BorrarDatos(){
    try (Connection con = conectar()) {
    String sql = "DELETE FROM PRODUCTS WHERE ProductName = ?";
    PreparedStatement ps = con.prepareStatement(sql);
    ps.setString(1, textName.getText());
    ps.executeUpdate();
    JOptionPane.showMessageDialog(this, "Registro Borrado");
    textName.setText("");
    Cargar_Registro();
   } catch (Exception e) {
    JOptionPane.showMessageDialog(this, "Error al Borrar: " + e.getMessage());
   }
  }
    void insertoDatos(){
    try (Connection con = conectar()) {
    String sql = "INSERT INTO Products (ProductName, QuantityPerUnit, UnitPrice, UnitsInStock, ReorderLevel, Discontinued)VALUES(?, ?, ?, ?, ?, ?)";
    PreparedStatement ps = con.prepareStatement(sql);
    ps.setString(1, textName.getText());
    ps.setString(2, textQuantity.getText());
    ps.setFloat(3, Float.parseFloat(textUnitPrice.getText()));
    ps.setInt(4, Integer.parseInt(textStonk.getText()));
    ps.setInt(5, Integer.parseInt(textRecordelevel.getText()));
    ps.setInt(6, Integer.parseInt(textdiscontinued.getText()));
    ps.executeUpdate();
    JOptionPane.showMessageDialog(this, "Registro insertado");
    Cargar_Registro();
   } catch (Exception e) {
    JOptionPane.showMessageDialog(this, "Error al insertar: " + e.getMessage());
   }
  }
    
   void ActualizarDatos(){

    try (Connection con = conectar()) {
    String sql = "UPDATE Products SET QuantityPerUnit = ?, UnitPrice = ?, UnitsInStock = ?, ReorderLevel = ?, Discontinued = ? WHERE ProductName = ? ";
    PreparedStatement ps = con.prepareStatement(sql);
    ps.setString(1, textQuantity.getText());
    ps.setFloat(2, Float.parseFloat(textUnitPrice.getText()));
    ps.setInt(3, Integer.parseInt(textStonk.getText()));
    ps.setInt(4, Integer.parseInt(textRecordelevel.getText()));
    ps.setInt(5, Integer.parseInt(textdiscontinued.getText()));
    ps.setString(6, textName.getText());
    ps.executeUpdate();
    JOptionPane.showMessageDialog(this, "Registro Actualizado");
    textName.setText("");
    Cargar_Registro();
   } catch (Exception e) {
    JOptionPane.showMessageDialog(this, "Error al Actualizar: " + e.getMessage());
   }
  }
  public void agregarListenerATabla() {
    TABLA_PRODUCTOS.getSelectionModel().addListSelectionListener(event -> {
        // Para evitar que se ejecute dos veces (cuando se está ajustando la selección)
        if (!event.getValueIsAdjusting()) {
            int filaSeleccionada = TABLA_PRODUCTOS.getSelectedRow();
            if (filaSeleccionada != -1) {  // -1 si no hay fila seleccionada
                // Obtén los valores de la fila seleccionada
                String productName = TABLA_PRODUCTOS.getValueAt(filaSeleccionada, 1).toString();
                String quantityPerUnit = TABLA_PRODUCTOS.getValueAt(filaSeleccionada, 4).toString();
                String unitPrice = TABLA_PRODUCTOS.getValueAt(filaSeleccionada, 5).toString();
                String unitsInStock = TABLA_PRODUCTOS.getValueAt(filaSeleccionada, 6).toString();
                String reorderLevel = TABLA_PRODUCTOS.getValueAt(filaSeleccionada, 8).toString();
                String discontinued = TABLA_PRODUCTOS.getValueAt(filaSeleccionada, 9).toString();
                // Coloca los valores en los JTextField correspondientes
                textName.setText(productName);
                textQuantity.setText(quantityPerUnit);
                textUnitPrice.setText(unitPrice);
                textStonk.setText(unitsInStock);
                textRecordelevel.setText(reorderLevel);
                textdiscontinued.setText(discontinued);
            }
        }
    });
}

